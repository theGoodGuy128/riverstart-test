{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "commonjs": true
  },
	"parser": "@babel/eslint-parser",
	"parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
	},
  "ignorePatterns": ["src/js/libs/**", "src/js/vue/**"],
  "globals": {
    "app": "writable",
    "appConfig": "readonly",
    "ymaps": "readonly"
  },
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "rules": {
    "strict": ["error", "global"],
    "semi": ["error", "never"],
    "quotes": ["warn", "single"],
    "no-var": ["error"],
    "no-unused-vars": ["error", { "args": "none" }]
  }
}
