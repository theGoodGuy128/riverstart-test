# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = tab
indent_size = 2

[*.{css,sass,scss,less}]
indent_size = 2

[*.{md,pug}]
trim_trailing_whitespace = false
